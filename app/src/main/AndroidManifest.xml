<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pro_solutions.attendanceapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher__icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/launcher__icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShareActivity"
            android:label="Share"
            />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            />
        <activity
            android:name=".AboutUsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminActivity"
            android:label="ADMIN"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentActivity"
            android:label="STUDENT"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfessorActivity"
            android:label="PROFESSOR"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImsWeb"
            android:label="WebView"
            />
        <activity
            android:name=".StudentChatActivity"
            android:label="NOTIFICATIONS">

        </activity>
    </application>

</manifest>